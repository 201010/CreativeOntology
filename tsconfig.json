{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".vercel/output",
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["api/**/*.ts", "components/**/*.tsx", "data/**/*.ts", "*.tsx", "*.ts"],
  "exclude": ["node_modules"]
}
